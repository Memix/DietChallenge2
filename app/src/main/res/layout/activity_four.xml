<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dietchallenge.second"
    android:background="@drawable/sexy_toon1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question1"
            style="@style/textstyle2"
            android:textColor="@color/style_color"/>


        <CheckBox
            android:id="@+id/box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Fruit"/>

        <CheckBox
            android:id="@+id/box2"
            android:text="@string/vegetables"
            style="@style/checkboxStyle"/>

        <CheckBox
            android:id="@+id/box3"
            style="@style/checkboxStyle"
            android:text="@string/Bread"/>

        <CheckBox
            android:id="@+id/box4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pasta"/>

        <CheckBox
            android:id="@+id/box5"
            style="@style/checkboxStyle"
            android:text="@string/rice"/>

        <CheckBox
            android:id="@+id/box6"
            style="@style/checkboxStyle"
            android:text="@string/no_dairy"/>

        <Button
            android:id="@+id/summary"
            style="@style/mybutton"
            android:layout_marginTop="20dp"
            android:text="@string/question1_submit"/>

    </LinearLayout>

    </RelativeLayout>

</ScrollView>